 @model Core.ViewModels.ApplicationUserViewModel
@{
    ViewData["Title"] = "Login";

}

<style>
   a{
       text-decoration: none;
   }
</style>

    <div class="container">
        <form method="post" asp-action="Login" asp-controller="Account" class="mb-5">

            <div>
               <h2 class="text-center   mb-3" style="color:black"><b>Login</b></h2>                                                                   
            </div>
            <div class="container card-body form-group  w-50" style="background-color: #D29737">
                <div class="">
                    <label><b>Email</b></label>
                    <input type="text" class="form-control" asp-for="Email" />
                </div>
                <div class="">
                    <label><b>Password</b></label>
                    <input type="password" class="form-control" asp-for="Password" />
                </div>

                <div class="row mt-4">
                    <div class="col-8">
                        <a class="" asp-controller="Account" asp-action="Registration"><b>SignUp</b></a>
                    </div>


                    <div class="col-4 text-success float-end">
                        <a class="" asp-controller="Account" asp-action="Login"><b>Forget Password</b></a>
                    </div>
                </div>
            </div>
            
            
            <div class="text-center mt-3">
                <button type="submit" class="btn P-2" style="background-color: #D29737; color:black;">Sign In</button>
                
            </div>
         </form>
    </div
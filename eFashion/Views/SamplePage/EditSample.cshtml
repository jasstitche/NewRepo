@model Core.Models.SamplePage

@{
    ViewData["Title"] = "Edit Sample";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card w-50">
        <div class="card-header">
            <h2 class="text-center">Edit Sample</h2>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Design Name</label>
                    <input asp-for="DesignName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Material Name</label>
                    <input asp-for="MaterialName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Cloth Size</label>
                    <input asp-for="ClothSize" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Number of Items</label>
                    <input asp-for="NumberOfItem" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Sample Image</label>
                    <input type="file" asp-for="SampleImage" class="form-control" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


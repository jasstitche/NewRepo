                        error: function () {
                            alert('Error retrieving state details.');
                        }
                    });
                } else {
                    // Clear the form fields if no state is selected
                    $('#deliveryFee').val('');
                    $('#active').prop('checked', false);
                    $('#deleted').prop('checked', false);
                }
            });
        });

